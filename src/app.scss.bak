@import url('https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Montserrat&display=swap');

.main-div {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: black;
    height: 100%;
    width: 100%;
    font-family: 'Montserrat', sans-serif;

    .main-card {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 30%;
        padding: 20px;
        border-radius: 40px;
        height: 100vh;

        .intro-div {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50%;
            margin-bottom: 50%;
            background: crimson;

            img {
                width: 180px;
                height: 180px;
                border-radius: 100px;
                margin-bottom: 70px;
            }

            p {
                text-align: center;
                font-size: 1.2rem;
                padding: 5px;
                font-weight: 2rem;
                word-wrap: break-word;
                color: #2C272E;

                span {
                    color: snow;
                    font-weight: bolder;
                }
            }

            .heading {
                font-size: 3rem;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .about-div {
                display: flex;
                flex-direction: row;
                justify-content: center;
                align-items: center;
                width: 100%;
                height: 100%;
                padding: 5px;
                border-radius: 50px;
                margin-top: 10%;
                background: #516BEB;

                .about-div-link {
                    text-decoration: none;
                    color: snow;
                    font-size: 1.3rem;
                    padding: 5px 25px 5px 25px;
                }
            }

            hr {
                width: 100%;
                border: 1px solid white;
                margin-bottom: 20px;
            }

            .contact-links {
                display: flex;
                flex-direction: row;
                position: relative;
                .contact-links-div {
                    display: flex;
                    flex-direction: row;
                    justify-content: center;
                    align-items: center;
                    width: 60px;
                    height: 60px;
                    padding: 20px;
                    border-radius: 50%;
                    background: #516BEB;
                    text-decoration: none;
                    color: white;
                    margin: 20px;
                }
            }
        }
    }
}

@media screen and (max-width: 800px) {
    .main-div {
        .main-card {
            width: 100%;
            .intro-div {
                img {
                    width: 120px;
                    height: 120px;
                    border-radius: 100px;
                    margin-bottom: 40px;
                }
                .about-div {
                    width: 100%;
                    height: 100%;
                    .about-div-link {
                        padding: 5px;
                        font-size: 1rem;
                    }
                }
            }
        }
    }
}